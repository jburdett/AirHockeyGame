<Page
    x:Class="Project.Instructions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignWidth="1280"
    d:DesignHeight="800">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="cmdBack" Content="Back" HorizontalAlignment="Left" Height="77" Margin="978,198,0,0" VerticalAlignment="Top" Width="163" Click="GoBack"/>
        <TextBlock x:Name="txtInstructions" HorizontalAlignment="Left" Height="101" Margin="415,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="517" FontSize="20"
                   Text="Control the left hockey paddle with touch to knock the yellow paddle into the goal at the other end, while defending your own goal." />
        <TextBlock x:Name="txtInstructions2" HorizontalAlignment="Left" Height="108" Margin="415,307,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="517" FontSize="20"
                   Text="Be careful! Cheat option is activated. Players are allowed to tilt the tablet to activate the accelerometer and affect the speed and direction of the paddle." />
    </Grid>
</Page>
